<section class="pad-sm">

<Cta12
  heading="Ready to take back control of your plumbing?"
  description="Book online in minutes, or call to speak with a live person."
  tone="secondary"
  textVariant="auto"
  className="shadow-lg"
  sectionClassName="py-24"
  buttons={{
    primary: {
      text: "Buy Now",
      url: "https://example.com/pricing",
      buttonProps: { size: "lg" },
    },
    secondary: {
      text: "Call Now",
      url: `${telephone}`,
      icon: Phone,                    
      iconClassName: "h-4 w-4 mr-2",   
      buttonProps: { variant: "ghost", size: "lg", className: "border-2 bg-none" },
    },
  }}
/>
</Main>
